<Widgets>:
    Button:
        text: "Click Me"
        on_release: root.onPressButton()

<MyPopup>:
    Label:
        text: "You pressed the button"
        size_hint: 0.6, 0.2
        pos_hint: {"x": 0.2, "top":1}

    Button:
        text: "Close"
        size_hint: 0.8, 0.2
        pos_hint: {"x": 0.1, "y": 0.1}
        on_release: root.popup.dismiss()